mixin fact(text)
	li= text

doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		title Pizza
		link(rel="stylesheet", href="css/style.css")
	body
		include includes/header
		main.main_container
				.page_title 
					h1 Немного о пицце ...
				.main_logo 
					img(src="images/logo.png")
				.main_content 		
					h3 Удивительные факты о пицце: 
					ul
						each val in facts
							+fact(val)
					
				
