mixin userName(text)
	p Welcome,
	p= text 	
	p !

doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		title Pizza
		link(rel="stylesheet", href="css/style.css")
	body
		header.header
			.header_container
				.header_nav
					a(href="/") Home
					a(href="/catalog") Catalog
				.header_form
					if login
						+userName(login)
						a(href="/logout") LOGOUT
					else 
						a(href="/login") LOGIN
						a(href="/signup") SIGN UP


					//- a(href="/logout") LOGOUT
					//- a(href="/login") LOGIN
					//- if isAuth
						a(href="/logout") LOGOUT
					//- else 
						a(href="/login") LOGIN